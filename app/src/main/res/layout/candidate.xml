<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/candidateImageView"
            android:layout_width="150dp"
            android:layout_height="163dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@raw/empty_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCandidateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/seoulhangangb"
            android:text="후보자 이름"
            android:textFontWeight="600"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/candidateImageView" />

        <TextView
            android:id="@+id/textPartyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:fontFamily="@font/seoulhangangl"
            android:text="정당이름"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCandidateName" />

        <TextView
            android:id="@+id/textSggName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:fontFamily="@font/seoulhangangl"
            android:text="선거구 이름"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPartyName" />
    </LinearLayout>
</LinearLayout>