<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/candidateImageView"
        android:layout_width="150dp"
        android:layout_height="163dp"
        android:layout_marginTop="5dp"
        android:src="@raw/empty_profile"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textCandidateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후보자 이름"
        android:textSize="20sp"
        android:textFontWeight="600"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/candidateImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
 />

    <TextView
        android:id="@+id/textPartyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="정당이름"
        app:layout_constraintTop_toBottomOf="@+id/textCandidateName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textSggName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="선거구 이름"
        app:layout_constraintTop_toBottomOf="@+id/textPartyName"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</LinearLayout>